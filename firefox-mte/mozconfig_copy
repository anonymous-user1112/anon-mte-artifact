ac_add_options --enable-application=browser

mk_add_options MOZ_OBJDIR=@TOPSRCDIR@/firefox_release_copy
ac_add_options --enable-optimize
ac_add_options --enable-expat-makes-copies

if command -v dnf &> /dev/null; then
# due to glibc symbol version conflict
ac_add_options --without-sysroot
# install clang-devel
ac_add_options --with-libclang-path=/usr/lib64
# install wasi-sdk manually
export WASM_CC="$topsrcdir/../wasi-sdk/bin/clang"
export WASM_CXX="$topsrcdir/../wasi-sdk/bin/clang++"
ac_add_options --with-wasi-sysroot=$HOME/wasi-sdk/share/wasi-sysroot 
fi
